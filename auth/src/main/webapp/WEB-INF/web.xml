<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Auth App</display-name>

	<filter>
		<filter-name>CORSFilter</filter-name>
		<filter-class>auth.CORSFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>ApiKeyFilter</filter-name>
		<filter-class>auth.ApiKeyFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>CORSFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>ApiKeyFilter</filter-name>
		<url-pattern>/v1/*</url-pattern>
	</filter-mapping>
	<!-- Front controller for React SPA routing -->
	<servlet>
		<servlet-name>FrontControllerServlet</servlet-name>
		<servlet-class>auth.FrontControllerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontControllerServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>
